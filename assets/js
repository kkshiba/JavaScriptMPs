function replaceSpace() {
    let str1 = document.getElementById("replaceTxtInput").value;
    let newStr1 = str1.replaceAll(' ', '');
    document.getElementById("replaceTxtResult").innerHTML = newStr1;
}

// Machine Problem 5: EmailCheck
function checkEmail() {
    let email = document.getElementById("emailInput").value;

    if (email.includes("@")) {
        document.getElementById("emailResult").innerHTML = "Valid";
    } else {
        document.getElementById("emailResult").innerHTML = "Invalid";
    }
}

